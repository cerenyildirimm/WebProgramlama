@model IEnumerable<WebOdevDeneme.Models.Product>
<script src="https://kit.fontawesome.com/66c316fb45.js" crossorigin="anonymous"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/site.js"></script>


<a asp-action="Create" class="btn btn-primary btn-sm">Add New Product</a>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <td style="width:50px">#</td>
            <td style="width:50px">Name</td>
            <td>Description</td>
            <td style="width:50px">Product Type ID</td>
            <td style="width:50px">Size</td>
            <td style="width:50px">URL for image</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model) {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>
                    @product.ProductTypes.Name
                </td>
                <td>@product.Size</td>
                <td><img alt="Bu ürüne henüz fotoğraf eklenmemiş." src="@product.ImgURL" /></td>
                <td>
                    <a href="/admin/update/@product.ProductId" class="btn btn-primary btn-sm">Update</a>
                    <button class="btn btn-danger btn-sm" onclick="document.getElementById('hide').style.visibility = 'visible';">
                        Delete
                    </button>
                    <div style="visibility:hidden" id ="hide">
                        <p>You are going to delete @product.Name product. Are you sure?</p>
                        <a  href="/admin/delete/@product.ProductId" class="btn btn-danger btn-sm">Yes</a>
                        <button onclick="document.getElementById('hide').style.visibility='hidden'" class="btn btn-danger btn-sm">No</button>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
